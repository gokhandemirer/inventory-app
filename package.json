{
	"name": "inventory-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"postinstall": "prisma generate",
		"lint": "next lint",
		"start": "next start",
		"wait:db": "wait-port localhost:3306",
		"start:db": "docker compose --env-file .env up -d db && yarn wait:db && yarn db:migrate:dev && yarn db-seed",
		"start:dev": "yarn start:db && yarn dev",
		"start:prod": "yarn build && yarn start:db && yarn start",
		"start:prod:docker": "docker compose --env-file .env up -d && yarn wait:db && yarn db:migrate:dev",
		"db-seed": "NODE_ENV=development prisma db seed",
		"db:migrate:dev": "prisma migrate dev --name mysql-init",
		"db:migrate:prod": "prisma migrate deploy",
		"test": "vitest run --passWithNoTests --coverage",
		"test:ci": "vitest run --passWithNoTests",
		"format": "prettier -c .",
		"check-types": "tsc --project tsconfig.json --pretty --noEmit",
		"db:prepare": "yarn db:migrate:prod && yarn db-seed"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@next-auth/prisma-adapter": "^1.0.5",
		"@prisma/client": "^5.0.0",
		"@t3-oss/env-nextjs": "^0.3.1",
		"@tanstack/react-query": "^4.29.7",
		"@tanstack/react-table": "^8.9.3",
		"@trpc/client": "^10.26.0",
		"@trpc/next": "^10.26.0",
		"@trpc/react-query": "^10.26.0",
		"@trpc/server": "^10.26.0",
		"next": "^13.4.2",
		"next-auth": "^4.22.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hot-toast": "^2.4.1",
		"superjson": "1.12.2",
		"ts-node": "^10.9.1",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.17.0",
		"@types/eslint": "^8.37.0",
		"@types/node": "^18.16.0",
		"@types/prettier": "^2.7.2",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"@typescript-eslint/eslint-plugin": "6.0.0",
		"@typescript-eslint/parser": "6.0.0",
		"@vitest/coverage-v8": "^0.33.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.40.0",
		"eslint-config-next": "^13.4.2",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"prisma": "^5.0.0",
		"tailwindcss": "^3.3.0",
		"typescript": "^5.0.4",
		"vitest": "^0.33.0",
		"wait-port": "1.0.4"
	},
	"ct3aMetadata": {
		"initVersion": "7.16.0"
	}
}
